<h2>Books</h2>

<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
			<%= link_to 'show', book_path(book.id) %>
			<%= link_to 'edit',''%>
			<%= link_to 'destory',''%>
		    </td>
		</tr>
		<% end %>
	</tbody>
</table>


<h4>New Book</h4>
<%= form_for(@book, url: '/books') do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>

<% end %>